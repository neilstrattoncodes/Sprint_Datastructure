<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-game" class="border-shadow">
        <span class="text-gradient">New Game <i class="fas fa-user"></i></span>
      </a>
    </div>

    <!-- form handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Game Title</th>
            <th>Description</th>
            <th>Type</th>
            <th>Price</th>
            <th>Sku</th>
            <th>Platform</th>
            <th>Status</th>
          </tr>
          <%- include('include/_show') %>
        </thead>
        <tbody></tbody>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
